<div class="waitlist-form">
  <form
    netlify
    netlify-honeypot
    name="waitlist"
    method="POST"
    action="/success"
  >
    <p class="hidden">
      <label>
        Don’t fill this out if you’re human: <input name="bot-field" />
      </label>
    </p>
    <input type="hidden" name="form-name" value="waitlist" />
    <input id="email" type="email" name="email" required />
    <button class="btn" type="submit">Request invite</button>
  </form>
</div>

<style>
  .waitlist-form {
    width: 100%;
    margin-bottom: 3rem;
  }

  form {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  input {
    width: 30%;
    padding: 15px 0;
    border: 1px solid #ccc;
    border-radius: 0.25rem;
  }

  .hidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

  .btn {
    padding: 12px 20px;
    border-radius: 4px;
    border: 1px solid #fff;
    background: #000;
    color: #fff;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;

    transition: all 0.2s ease-in-out;
  }

  .btn:hover {
    background: hsl(0, 0%, 10%);
  }

  @media (max-width: 768px) {
    form {
      flex-direction: column;
      width: 100%;
    }

    input,
    .btn {
      width: 100%;
    }

    .waitlist-form {
      width: 90%;
    }
  }
</style>
